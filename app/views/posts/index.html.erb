<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<%= form_with url: search_path, method: :get do |form| %>
  <%= form.label :search %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>
<div id="posts">
 <%= render "posts/posts", posts: @posts %>
</div>

<%= link_to "New post", new_post_path %>
